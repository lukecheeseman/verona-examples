class Signal {
  _signal: Promise[None] & iso;

  create(): Signal & iso {
    var result = new Signal;
    result._signal = Promise.create();
    result
  }

  await(self: mut): cown[None] & imm {
    (mut-view (self._signal)).wait_handle()
  }

  signal(self: mut) {
    (self._signal = Promise.create()).fulfill(new None);
  }

}
